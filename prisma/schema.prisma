// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String   @db.VarChar(255)
  content   String?
  imgURL    String?
  tag       String
  author    Profile  @relation(fields: [authorId], references: [id])
  authorId  String
  Review    Review[]

  comentedPostId String?
  comentedAt     Post?   @relation("Coments", fields: [comentedPostId], references: [id])
  coments        Post[]  @relation("Coments")
}

model Review {
  id            String   @id
  profileId     String
  postId        String
  profile       Profile  @relation(fields: [profileId], references: [id])
  post          Post     @relation(fields: [postId], references: [id])
  dateReference DateTime
  obs           String
}

model Profile {
  id         String    @id
  name       String
  bio        String?
  photoUrl   String?
  user       User      @relation(fields: [userId], references: [id])
  userId     String    @unique
  followedBy Profile[] @relation("Follows")
  following  Profile[] @relation("Follows")
  Review     Review[]
  Post       Post[]
}

model User {
  id      String   @id
  email   String   @unique
  name    String
  active  Boolean  @default(false)
  profile Profile?
}
